<h1>Measurements#index</h1>
<p>Find me in app/views/measurements/index.html.erb</p>

<% if @measurements.any? %>
  <h4>Measurements:</h4>
  <ul>
  <% @measurements.each do |measurement| %>
    <li><%= link_to measurement.weight, user_measurement_path(current_user, measurement)%></li>
  <% end %>
  </ul>
<% else %>
<p>No measurements tracked</p>
<% end %>
<hr>
<%= link_to "new Measurement", new_user_measurement_path(current_user) %>

